<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_white"
    tools:context=".ScenesExploreTest">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sky"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_sky"
            />
        <ImageView
            android:id="@+id/exit_scenes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:background="@mipmap/left"
            />
        <TextView
            android:id="@+id/text_scenes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scenes Explore"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="11:04"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/sig"
            android:layout_marginLeft="300dp"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@mipmap/background_sig"/>
        <ImageView
            android:id="@+id/wifi"
            android:layout_marginLeft="330dp"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@mipmap/background_wifi"/>
        <ImageView
            android:id="@+id/ele"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="360dp"
            android:layout_width="22dp"
            android:layout_height="13dp"
            android:background="@mipmap/background_elec"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/attention1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Scenes below are under exploration. If you have needs, please"
        android:textColor="@color/light_blue"
        />
    <TextView
        android:id="@+id/attention2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text=" contact us. >"
        android:textColor="@color/light_blue"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:id="@+id/img_ground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_page"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/text_bg1"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/text_bg2"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="210dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/front_pct_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/chat"
                />
            <ImageView
                android:id="@+id/chat_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:id="@+id/text_chat_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="群组聊天 好友通信录 语音消息 资料多端同步"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="30dp"
                />
            <ImageView
                android:id="@+id/front_pct_player"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="220dp"
                android:background="@mipmap/player"
                />
            <ImageView
                android:id="@+id/player_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频播放"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="260dp"
                />
            <TextView
                android:id="@+id/text_player_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="自适应拉流 视频切换 倍速播放"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="220dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp">
            <ImageView
                android:id="@+id/text_bg3"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/text_bg4"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="210dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/front_pct_sing"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/sing"
                />
            <ImageView
                android:id="@+id/sing_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_sing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线k歌"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:id="@+id/text_sing_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="曲库点唱 实时合唱 互动抢唱 实时评分"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="30dp"
                />
            <ImageView
                android:id="@+id/front_pct_make"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="220dp"
                android:background="@mipmap/video_make"
                />
            <ImageView
                android:id="@+id/make_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短视频制作"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="260dp"
                />
            <TextView
                android:id="@+id/text_make_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="图片视频编辑 多屏合拍 图片转场"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="220dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp">
            <ImageView
                android:id="@+id/text_bg5"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/text_bg6"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="210dp"
                android:background="@drawable/bg_text"
                />
            <ImageView
                android:id="@+id/front_pct_call_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/call_chat"
                />
            <ImageView
                android:id="@+id/call_chat_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_call_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语聊房"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:id="@+id/text_call_chat_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="高音质 大房间 平滑上下麦"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="30dp"
                />
            <ImageView
                android:id="@+id/front_pct_virtual"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="220dp"
                android:background="@mipmap/virtual"
                />
            <ImageView
                android:id="@+id/virtual_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/right"
                />
            <TextView
                android:id="@+id/text_virtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虚拟形象"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="260dp"
                />
            <TextView
                android:id="@+id/text_virtual_eg"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="虚拟语聊 虚拟k歌 虚拟直播"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="220dp"
                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>