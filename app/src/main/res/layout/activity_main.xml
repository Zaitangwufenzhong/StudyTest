<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background8"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/layout2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        android:background="@mipmap/background_head2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/clutter_app"
        android:textSize="23sp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:padding="5dp"
        android:hint="@string/username"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:padding="5dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="@string/login"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:text="@string/regis"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_password_forget"
        android:textSize="15sp"
        android:textColor="@color/app_main_forget_text"
        android:textStyle=""
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

<!--    <Button-->
<!--        android:id="@+id/btn_test"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="wrap_content"-->

<!--        android:layout_marginTop="20dp"-->
<!--        android:text="@string/app_test"-->
<!--        android:background="@color/green"-->
<!--        />-->
</LinearLayout>