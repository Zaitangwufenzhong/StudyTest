<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层：透明背景 -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/> <!-- 完全透明的背景 -->
        </shape>
    </item>

    <!-- 第二层：底部边框 -->
    <!-- android:bottom="-1dp" 表示边框相对于第一层向下偏移1dp，使得边框显示在按钮的底部 -->
    <item android:bottom="-1dp">
        <shape>
            <solid android:color="#00FFFFFF"/> <!-- 这里仍然使用透明背景 -->
            <stroke
                android:width="1dp"
                android:color="#C5C5C5"/> <!-- 黑色边框 -->
        </shape>
    </item>
</layer-list>